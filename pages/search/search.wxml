<!--pages/search/search.wxml-->
<view class="search_row">
  <input type="text" placeholder="请输入您要搜索的商品" bindinput="handleInput" value="{{Inpvalue}}"></input>
  <button hidden="{{!isFocus}}" bindtap="handleCanle">取消</button>
</view>

<view class="search_content">
  <navigator class="search_item" 
  wx:for="{{goods}}" 
  wx:key="goods_id"
  url="/pages/goods-detail/goods-detail?goods_id={{item.goods_id}}">
    {{item.goods_name}}
  </navigator>
</view>



