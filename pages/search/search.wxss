/* pages/search/search.wxss */
page{
  background-color: #f3f4f6;
}
.search_row{
  width: 95%;
  display: flex;
  margin:20rpx auto;
  height: 60rpx;
}
.search_row input{
  height: 100%;
  flex: 1;
  background-color: #fff;
  font-size: 28rpx;
  padding-left: 20rpx;
}
.search_row button{
  height: 100%;
  width:110rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  padding: 0;
  background-color: #fff;
  font-size: 28rpx;
}
.search_content{
  width: 95%;
  margin: 0 auto;
}
.search_item{
  background-color: #fff;
  padding: 20rpx 10rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
