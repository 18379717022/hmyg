/* pages/feedback/feedback.wxss */
page{
  background-color: #f2f3f6;
}
.fb_main{
  position: relative;
}
.fb_title{
  font-size: 30rpx;
  padding: 15rpx 13rpx;
}
.fb_tips{
  display: flex;
  width: 95%;
  margin: 15rpx auto;
  flex-wrap: wrap;
  justify-content: space-between;
}
.fb_tips view{
  height: 60rpx;
  width: 30%;
  font-size: 30rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx;
}
.fb_content{
  margin:20rpx auto;
  width: 95%;
  background-color: #fff;
}
.fb_content textarea{
  font-size: 34rpx;
  padding: 15rpx;
}
.fb_tool{
  padding: 20rpx 15rpx;
  display: flex;
  align-items: center;
}
.btn{
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f2f3f6;
  color: #ccc;
  border: 1rpx solid #ccc;
  font-size: 40rpx;
}
.form_btn_wrap{
  position: absolute;
  right: 20rpx;
  display: flex;
  background-color: red;
  border-radius: 5rpx;
  font-size: 32rpx;
  justify-content: center;
  align-items: center;
  color: white;
  padding: 20rpx 15rpx;
  width: 120rpx;
  height: 30rpx;
}
.up_img_item{
  margin: 0 30rpx;
}
.up_img_wrap{
  width: 100rpx;
  height: 100rpx;
  position: relative;
}
.up_img_wrap image{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.up_img_wrap icon{
  position: absolute;
  top: -20rpx;
  right: -20rpx;
}